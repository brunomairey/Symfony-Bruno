{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
       
<h2 class="page-header"> Latest cars </h2>
  <table class="table table-striped">
   <thead>
       <tr>
           <th>#</th>
           <th>name</th>
           <th>price</th>
           <th>created At</th>
           <th></th>
       </tr>
   </thead>
   {% for car in cars %}
   <tbody>
       <tr>
           <th scope="row">{{car.id}}</th>
           <td>{{car.name}}</td>
           <td>{{car.price}}</td>
            <td>{{car.createdAt | date('D d/m/y') }}</td>
           <td> <a href="/details/{{car.id}}" class="btn btn-success">View</a>
                   
           <a href="/edit/{{car.id}}" class="btn btn-info">Edit</a>
           <a href="/delete/{{car.id}}" class="btn btn-danger">Delete</a>        
           </td>
       </tr>
   </tbody>
{% endfor %}
   </table>
{% endblock %}
