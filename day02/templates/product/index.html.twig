{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block body %}
<h2 class= "mt-3 mb-3 text-center">Our Travel Offers</h2>

<div class="row row-cols-sm-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 mx-4 justify-content-around">
  
  {% for product in products %}

      <div class="card mb-3 mx-1" >
      	     <img src="{{product.image}}" class="card-img-top" alt="bolivia">
	        <div class="card-body">
	          <h5 class="card-title">{{product.name}}</h5>
	          <p class="card-text">
				      Now only for <b>{{product.price}} $</b></p>
				 <p class="card-text"><a href="/product/{{product.id}}" class="btn btn-primary">More Details</a></p>
		{# 		 <p class="card-text"><a href={{ path('product_show') }} class="btn btn-primary">More Details</a></p> #}

				      {{product.createdAt | date('d/m/y')}}
	       	  	  </div>
  	</div>

{% endfor %}  	
	</div>

{% endblock %}
